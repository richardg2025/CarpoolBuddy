<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="6dp">

    <ImageButton
        android:id="@+id/deleteVehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="-4dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/baseline_close_24" />

    <TextView
        android:id="@+id/vehicleModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/averia_sans_libre_light"
        android:text="Porsche 911"
        android:textColor="@color/theme_gray"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/isEV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_alignEnd="@+id/vehicleModel"
        android:fontFamily="@font/averia_sans_libre_light"
        android:text="EV"
        android:textColor="@color/theme_gray"
        android:textSize="34sp" />

    <Button
        android:id="@+id/openVehicleButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/vehicleModel"
        android:backgroundTint="#00FFFFFF"
        android:onClick="navDriverPassengers"
        android:textColor="#00FFFFFF"
        tools:ignore="UsingOnClickInXml" />


</RelativeLayout>